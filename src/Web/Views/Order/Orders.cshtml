@using EStore.Core.Entities.OrderAggregate
@model IEnumerable<Order>

<h2>Orders</h2>

<div class="container-fluid">

  <div class="row fw-bold mt-3">

    <div class="col">Order Id</div>
    <div class="col">Create Date</div>
    <div class="col">Total Price</div>

  </div>

  @foreach (var item in Model)
  {
    
    <div class="row bg-light mt-3 fs-5 orders" onclick="estore_site.getOrderDetails(this)">
      <div class="col">@item.Id</div>
      <div class="col">@item.CreatedAt</div>
      <div class="col">@item.TotalPrice</div>

    </div>
   

    <div id="orderDetails" class="mt-3 hidden" hidden >
      <div class="row fw-bold">
        <div class="col">Name</div>
        <div class="col">Quantity</div>
        <div class="col">Price</div>

      </div>
      @foreach (var orderItem in item.OrderItems)
      {
        <div class="row mt-2 ">
          <div class="col">@orderItem.ProductName</div>
          <div class="col">@orderItem.Qt</div>
          <div class="col">@orderItem.Price</div>
        </div>
      }

    </div>
  }

</div>
  