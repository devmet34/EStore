@model BasketVM

<h2>Checkout</h2>

<div id="orderContainer" class="container-fluid mt-5">

  <div class="row fw-bold mb-2">
    <div class="col-1">Img</div>
    <div class="col">Name</div>
    <div class="col">Qt</div>
    <div class="col">Price</div>
  </div>



  @foreach (var item in @Model.BasketItems)
  {
    <div class="row mt-1">
      <img class="col-1" src="/@item.Product?.PictureUri" />
      <div class="col">@item.Product?.Name</div>
      <div class="col">@item.Qt</div>
      <div class="col">@item.Price</div>
    </div>

  }
  <div class="text-info mt-3">Total: @Model.TotalPrice</div>
  <form method="post">
    <input type="submit" class="mt-3" asp-controller="OrderController" asp-action="MakeOrder" onclick="return confirm('Making order?')" value="Make Order" />
  </form>

</div>
