

<div class="container filter-container">
  <form id="findForm" class="find-form" >
  <input id="find" class="find" type="text" placeholder="Search" />
  <button type="submit" >Find</button>
  </form>
  <div>
    <form id="sortForm" >
    <div class="fa fa-filter"></div>

      <input hidden id="page" name="page" type="number" />
      <input hidden id="lastId" type="number" />
    

      <select name="sortBy" class="form-select-sm" id="sortby" title="Sort by">
      <option selected  disabled>Sort by</option>
      <option value="name">Name</option>
      <option value="price">Price Low</option>
      <option value="price_desc">Price High</option>
      <option value="cat">Category</option>
      </select>
     
    </form>
  </div>
  
 <partial name="_ModalFilter" />
  
  
</div>

